        function saveCart() {
    const customerName = document.getElementById('customer-name').value;
    const saveButton = document.getElementById('save-button'); // Get the button element

    if (cart.length === 0 || !customerName) {
        alert('Please add items to the cart and enter the customer name.');
        return;
    }

    // Disable the button to prevent double-clicking
    saveButton.disabled = true;

    const cartData = cart.map(item => ({
        id: item.product.id,
        name: item.product.name,
        quantity: item.quantity,
        total: (item?.product?.price * item?.quantity)?.toFixed(2) // Calculate total for each product
    }));

    const totalAmount = cart.reduce((acc, item) => acc + (item.product.price * item.quantity), 0);

    const payload = {
        customerName,
        cart: cartData,
        total: totalAmount?.toFixed(2) // Total amount for the entire cart
    };

    fetch('/portal/bar-buy', {  // Ensure the correct endpoint is used
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(payload)
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        // Alert for successful response
        alert(`Success: ${data.message}`);
        
        Toastify({
            text: data.message,
            duration: 2000,
            newWindow: true,
            close: true,
            gravity: "top", // `top` or `bottom`
            position: "center", // `left`, `center` or `right`
            stopOnFocus: true, // Prevents dismissing of toast on hover
            style: {
                background: "green",
            },
            onClick: function() {} // Callback after click
        }).showToast();
        
        clearCart(); // Clear the cart after saving
        window.location.reload();
        addRecentSummary({ id: data.id, customerName, total: data.total });
    })
    .catch(error => {
        // Alert for error response
        alert(`Error: ${error.message}`);
        console.error('Error saving cart:', error);
    })
    .finally(() => {
        // Re-enable the button after the operation is complete
        saveButton.disabled = false;
    });
}

    
